<script>
    
  function calcPrice() {
      $('#spinner').html('<img src="/ajax-loader.gif"> Prisni...');
      $('#spinner').show();
      
      $.ajax(
        {
            url: '@Url.Action("Calc", "Order")',
            type: 'GET',
            data: {
                idLloji: $('#IdLloji').val(),
                idZona: $('#IdZona').val(),
                pesha: $('#Pesha').val(),
            },
        //contentType:'text/plain', //'application/json; charset=utf-8',
        success: function (data) {
            //alert(data);
            $('#Cmimi').val(data);
            $('#spinner').hide();
        },
        error: function () {
            alert("Ndodhi nje gabim ne llogaritjen e cmimit !");
            $('#spinner').hide();
        }
        }
            )
    }
</script>
